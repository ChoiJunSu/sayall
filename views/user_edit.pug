extends layout

block content
    p <회원정보 수정>
    form(action="/user/edit", accept-charset="utf-8", method="post")
        p 아이디:
        input(id="id", name="id", type="text", readonly, required)
        br
        p 비밀번호:
        input(id="pw", name="pw", type="password")
        br
        p 이름:
        input(id="name", name="name", type="text", required)
        br
        p 전화번호:
        input(id="phoneNumber", name="phoneNumber", type="tel", readonly, required)
        br
        p 이메일
        input(id="email", name="email", type="email", required)
        br
        button(type="submit") 수정
    button(onclick="window.history.back()") 취소

    p(id="dataId", hidden) #{user.id}
    p(id="dataName", hidden) #{user.name}
    p(id="dataPhoneNumber", hidden) #{user.phoneNumber}
    p(id="dataEmail", hidden) #{user.email}

    script.
        window.onload = () => {
            document.getElementById('id').value = document.getElementById('dataId').innerText;
            document.getElementById('name').value = document.getElementById('dataName').innerText;
            document.getElementById('phoneNumber').value = document.getElementById('dataPhoneNumber').innerText;
            document.getElementById('email').value = document.getElementById('dataEmail').innerText;
        };